doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Helicar Booking - Information
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css")
    style.
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        padding: 2rem;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(to right, #f8f9fa, #e0e0e0);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        min-height: 100vh;
        text-align: center;
      }
      img {
        height: auto;
        width: 200px;
        margin-bottom: 1.5rem;
      }
      h1 {
        color: #2c3e50;
        font-size: 2.5rem;
        margin-bottom: 1rem;
      }
      p {
        color: #555;
        font-size: 1.2rem;
        max-width: 800px;
        margin: 1rem 0;
      }
      .social-icons {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
        justify-content: center;
      }
      .social-icons a {
        color: #2c3e50;
        font-size: 1.8rem;
        transition: color 0.3s ease;
      }
      .social-icons a:hover {
        color: #0077b6;
      }
      .contact-section {
        margin-top: 3rem;
        background: #ffffff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
      }
      .contact-section h2 {
        margin-bottom: 1rem;
        color: #2c3e50;
      }
      .contact-section p {
        margin: 0.5rem 0;
        font-size: 1rem;
        color: #666;
      }
      @media (max-width: 600px) {
        body {
          padding: 1rem;
        }
        h1 {
          font-size: 2rem;
        }
        p {
          font-size: 1rem;
        }
        img {
          width: 150px;
        }
        .social-icons a {
          font-size: 1.5rem;
        }
      }
